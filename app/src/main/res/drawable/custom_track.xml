<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:autoMirrored="true">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#A6A6A6" />
            <corners android:radius="@dimen/_10sdp" />
            <size android:width="@dimen/_30sdp" android:height="@dimen/_12sdp" />
            <!--            <stroke android:width="1dp" android:color="#414141" />-->
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:startColor="#F6DCFF" android:endColor="#813AC8"  android:type="linear"
                />
            <corners android:radius="@dimen/_10sdp" />
            <size android:width="@dimen/_30sdp" android:height="@dimen/_12sdp" />
            <!--            <stroke android:width="1dp" android:color="#414141" />-->
        </shape>
    </item>
</selector>