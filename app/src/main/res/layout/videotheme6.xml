<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_theme_bg6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagecall"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/ic_alex"
        app:civ_border_color="#FFFFFFFF"
        app:civ_border_width="2dp"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white_call"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagecall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming audio call"
        android:fontFamily="@font/poppins"
        android:textColor="@color/light_white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilename" />

    <com.example.swipebutton_library.SwipeButton
        android:id="@+id/recievecallconst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:button_background_drawable="@drawable/ic_iphone_bg"
        app:button_background_src="@drawable/ic_single_vid"
        app:button_height="@dimen/_50sdp"
        app:button_width="@dimen/_50sdp"
        app:inner_text="Slide to answer"
        app:has_active_status="false"
        app:inner_text_color="@color/white_call"
        app:outer_background_height="@dimen/_52sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        app:outer_background_drawable="@drawable/ic_swipe_iphone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />






</androidx.constraintlayout.widget.ConstraintLayout>