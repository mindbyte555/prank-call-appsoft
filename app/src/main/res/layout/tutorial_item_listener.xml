<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView

        android:id="@+id/addtowidgetimageviewactivity"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_230sdp"
        android:src="@drawable/afghanistan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addtowidgettextviewactivity"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_13sdp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="On the home screen,touch and hold an \n empty area until the bottom menu appears."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addtowidgetimageviewactivity" />
</androidx.constraintlayout.widget.ConstraintLayout>